{
  "extends": "@opentrader/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "paths": {
      // imported modules
      "#backtesting/*": ["../../packages/backtesting/src/*"],
      "#bot-processor/*": ["../../packages/bot-processor/src/*"],
      "#db/*": ["../../packages/db/src/*"],
      "#exchanges/*": ["../../packages/exchanges/src/*"],
      "#processing/*": ["../../packages/processing/src/*"],
      "#trpc/*": ["../../packages/trpc/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
