{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.6.10",
  "devDependencies": {
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.16"
  },
  "scripts": {
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "front": "turbo run dev --filter=frontend",
    "postinstall": "pnpm link --global"
  },
  "bin": {
    "opentrader": "./bin/opentrader.sh"
  }
}
